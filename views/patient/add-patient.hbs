<div class="row" id="firstclass">

        <h1>Add Patient</h1>
        {{# if errors}}
            <div class="alert alert-danger" role="alert">
                   <ul>
                       {{# each errors}}
                           <li class="glyphicon glyphicon-pushpin vertical-list">&nbsp;{{this.msg}}</li>
                           <br />
                       {{/each}}
                   </ul>
                </div>
            {{else}}
                {{# if success }}
                    <div class="alert alert-success" role="alert">
                        <h2>Patient added successfully.</h2>
                    </div>
                {{/if}}
        {{/if}}
        <form action="/patient/add-patient/submit" method="post" id="add-patient" class="form-horizontal">
            <table class="tbl-add-patient table table-striped">
                <tr>

            <td class="form-group">
                <label for="firstname"  >Firstname</label>
            </td>
            <td class="form-group">
                <input type="text" id="firstname" name="firstname" class="form-control progresstxtbox" onchange="" autocomplete="off" />
            </td>
                </tr>
                <tr>
            <td class="form-group">
                <label for="lastname" >Lastname</label>
            </td>
                    <td class="form-group">
                <input type="text" id="lastname" name="lastname" class="form-control progresstxtbox" autocomplete="off"/>
            </td>
                </tr>
                <tr>
            <td class="form-group">
                <label for="dateofbirth" >Date of Birth</label>
            </td>
                    <td class="form-group">
                        <div class='input-group date'>
                            <input type="text" id="dateofbirth" name="dateofbirth" class="form-control progresstxtbox" autocomplete="off" placeholder="mm/dd/yyyy" />
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                     </td>
                </tr>
                <tr>
            <td class="form-group">
                <label for="age" >Age</label>
            </td>
                    <td class="form-group">
                <input type="text" id="age" name="age" class="form-control disabled progresstxtbox" readonly="readonly" />
            </td>
                </tr>
                <tr>
            <td class="form-group">
                <label for="gender" >Gender</label>
            </td>
                    <td class="form-group">
                <select id="gender" name="gender" class="form-control">
                    <option name="male" value="Male" selected="selected">Male</option>
                    <option name="female" value="Female" >Female</option>
                </select>
            </td>
                </tr>
                <tr>
            <td class="form-group">
                <label for="phone" >Phone</label>
            </td>
                    <td class="form-group">
                <input type="text" id="phone" name="phone" class="form-control progresstxtbox" autocomplete="off"/>
            </td>
                </tr>
                <tr>
            <td class="form-group">
                <label for="description" >Description</label>
            </td>
                    <td class="form-group">
                <textarea id="description" name="description" rows="4" class="form-control progresstxtbox"></textarea>&nbsp;<label class="" id="chars"></label>
            </td>
                </tr>



            </table>
            <div class="form-group" style="text-align:center">
                <button type="submit" class="btn btn-primary row-fluid">Add</button>
            </div>

            <div class="progress">

                <div id="progress-bar" class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                    0% Complete
                </div>
            </div>
        </form>

</div>